<div class="container">
 <div class="row">

 <%= render 'users/list_user', { user: @user, book_new: @book_new } %>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<tr>
				<td></td>
				<td>title</td>
				<td>opinion</td>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<td> <%= link_to user_path(book.user_id) do %>
					<%= attachment_image_tag @user, :profile_image, size:"50x50",
					format:"jpeg", fallback:"no_image.jpg" %> <% end %> </td>
				<td> <%= link_to book_path(book) do %>
					<%= book.title %> <% end %></td>
				<td> <%= book.body %></td>
			</tr>
			<% end %>
		</table>
	</div>
 </div>
</div>