<div class="container">
<h2>User info</h2>

<%= form_for (@user) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画面" %>
  <%= attachment_image_tag @user,:profile_image, size:"100x100" , fallback:"no_image.jpg" %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>


  <div class="field">
  <%= f.submit "Update" %>
  </div>
<% end %>

</div>